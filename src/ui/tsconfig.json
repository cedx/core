{
	"extends": "../../tsconfig.json",
	"include": ["**/*.ts"],
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"importHelpers": true,
		"noEmit": false,
		"outDir": "../../lib/ui",
		"plugins": [
			{"name": "ts-lit-plugin"}
		],
		"rootDir": ".",
		"tsBuildInfoFile": "../../var/ui.tsbuildinfo",
		"useDefineForClassFields": false
	},
	"references": [
		{"path": "../data/tsconfig.json"},
		{"path": "../html/tsconfig.json"},
		{"path": "../http/tsconfig.json"},
		{"path": "../util/tsconfig.json"}
	]
}
